{
	"env": {
		"browser": true,
		"es2020": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"rules": {
		"no-console": "off",
		"no-new-wrappers": "error",
		"no-proto": "error",
		"no-with": "error",
		"no-undef": "error",
		"no-multi-spaces": "error",
		"no-var": "error",
		"no-prototype-builtins": "off",
		"array-callback-return": "error",
		"consistent-return": "error",
		"prefer-const": "error",
		"curly": "error",
		"eqeqeq": "error",
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"indent": ["error", "tab", {"SwitchCase": 1}]
	},
	//disable ESLint in tests because "import.meta" is not supported by ESLint yet
	"ignorePatterns": ["dicom.test.js"]
}
